page {
  background: #e3402f;
  height: 100%;
}

.wrapper {
  position: relative;
  min-height: 100%;
}


.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 1226rpx;
  background-size: 100%;
  background-color: #e3402f;
  background-repeat: no-repeat;
}

.banner {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 338rpx;
  background-size: 100%;
